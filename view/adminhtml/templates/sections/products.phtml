<div class="bg-white p-6 rounded-xl shadow-lg border border-gray-300">
    <h2 class="text-xl font-extrabold mb-5 text-gray-800 border-b pb-3">1. Find Products</h2>

    <div class="relative">
        <input type="text" x-model="searchQuery" @input.debounce.300ms="searchProducts()"
               placeholder="Scan SKU or type Name..."
               class="w-full border-2 border-gray-300 p-4 pl-5 rounded-xl text-xl font-bold shadow-sm focus:border-blue-500 transition" autofocus>

        <div x-show="loading" class="absolute right-4 top-4">
            <svg class="animate-spin h-8 w-8 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
        </div>
    </div>

    <!-- Резултати -->
    <div class="mt-5 grid grid-cols-1 gap-3 max-h-[650px] overflow-y-auto pr-2">
        <template x-for="product in searchResults" :key="product.id">
            <!--
               ВАЖНО: Използваме @mousedown вместо @click за по-добра реакция
            -->
            <div class="flex justify-between items-center border-2 border-gray-200 bg-gray-50 p-4 rounded-xl hover:bg-blue-50 hover:border-blue-400 transition cursor-pointer shadow-sm"
                 @mousedown.prevent="addToCart(product)">

                <div class="flex items-center gap-4 flex-grow">
                    <img :src="product.image" class="h-16 w-16 object-contain bg-white rounded-lg border">
                    <div>
                        <div class="text-lg font-bold text-gray-900 leading-tight" x-text="product.name"></div>
                        <div class="flex items-center gap-3 mt-2">
                            <span class="text-sm font-mono font-bold bg-gray-200 px-2 py-1 rounded text-gray-700" x-text="product.sku"></span>
                            <span class="text-sm font-bold text-green-700 bg-green-100 px-2 py-1 rounded border border-green-200" x-text="'Stock: ' + product.qty_available"></span>
                        </div>
                    </div>
                </div>

                <div class="flex items-center gap-4">
                    <button @mousedown.stop="openProductModal(product)" class="p-3 text-gray-400 hover:text-blue-600 hover:bg-blue-100 rounded-full transition bg-white border" title="Preview">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                    </button>
                    <div class="font-extrabold text-green-700 w-28 text-right text-xl" x-text="formatPrice(product.price)"></div>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white h-12 w-12 rounded-lg flex items-center justify-center shadow-lg font-bold text-2xl transition transform active:scale-95">+</button>
                </div>
            </div>
        </template>

        <div x-show="searchResults.length === 0 && searchQuery.length > 2 && !loading" class="text-center py-10 text-gray-500 text-lg">No products found.</div>
        <div x-show="searchQuery.length <= 2" class="text-center py-10 text-gray-400 text-base">Start typing to search...</div>
    </div>
</div>